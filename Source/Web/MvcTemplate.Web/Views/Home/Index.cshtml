@model ChillZone.Web.ViewModels.Home.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}
<h1>Latest Posts</h1>
<div class="row">
    @foreach (var post in Model.Posts)
    {
        
            <div class="col-sm-4">
                <div style="align-items:baseline">   
                <a href="Post/@post.Id"><img src="@post.SharedPhotoUrl" width="300" class="img-responsive" /></a>
                    <br />
                <div>Category <a href="Category/@post.Category">@post.Category</a></div>
                 </div>
            </div>
        
    }
</div>
<h1>Categories</h1>
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-2">
            <a href="Category/@category.Name.ToString()" class="btn btn-info"> @category.Name.ToString()</a>
        </div>
    }
</div>