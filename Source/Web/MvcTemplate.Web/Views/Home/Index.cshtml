@model ChillZone.Web.ViewModels.Home.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}
<div>
    @Html.Partial("_CategoriesPartial")
</div>
<h1>Latest Posts</h1>

<div class="row">
    @foreach (var post in Model.Posts)
    {
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span2">
                </div>
                <div class="span10">
                    <div><h3><a href="Post/@post.Id">@post.Title</a></h3></div>
                    @if (post.IsVideo == false)
                    {
                        <a href="Post/@post.Id"><img src="@post.SharedUrl" width="300" class="img-responsive" /></a>
                        <br />
                    }
                    else
                    {
                        <iframe width="560"
                                height="315"
                                src="@post.SharedUrl"
                                frameborder="0"
                                allowfullscreen></iframe>
                                <br />

                    }

                    <div class="col-md-1">
                        <div class="well text-center ">
                            <div class="row"> @post.Points.Sum(x => x.Value) </div>
                        </div>
                    </div>
                    <div><b>Created by:</b>@post.Author.UserName</div>
                    <br />
                    <div><b>Category :</b><a href="Category/@post.Category">@post.Category</a></div>
                    <br />
                    <div><b>Created on:</b>@post.CreatedOn</div>
                </div>
            </div>
        </div>
        <br />
    }
</div>
<h2>Categories</h2>
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-2">
            <a href="Category/@category.Name" class="btn btn-info"> @category.Name</a>
        </div>
    }
</div>
<style>
    div[data-action="up"], div[data-action="down"] {
        cursor: pointer;
    }
</style>

