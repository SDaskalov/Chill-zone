@model ChillZone.Web.ViewModels.Home.PostViewModel

@{
    ViewBag.Title = "Create Post Form";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new post.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Category, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="container" id="con"></div>
    <div>
        @Ajax.ActionLink("Photo", "CreatePhoto", "Posts", null,
                                                new AjaxOptions
                                                {
                                                    UpdateTargetId = "con",
                                                    LoadingElementId = "addAnswerToPostLoading",
                                                    HttpMethod = "GET",
                                                    InsertionMode = InsertionMode.Replace
                                                }, new { @class = " btn btn-primary btn-sm" })
        @Ajax.ActionLink("Video", "CreateVIdeo", "Posts", null,
                                                new AjaxOptions
                                                {
                                                    UpdateTargetId = "con",
                                                    LoadingElementId = "addAnswerToPostLoading",
                                                    HttpMethod = "GET",
                                                    InsertionMode = InsertionMode.Replace
                                                }, new { @class = " btn btn-primary btn-sm" })

    </div>
}